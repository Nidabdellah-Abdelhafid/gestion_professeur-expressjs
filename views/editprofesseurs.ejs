   <body class="sb-nav-fixed">

       <%- include('partials/header.ejs') %> 

  
           
              
           

<div id="layoutSidenav_content">
                    <main>
               

                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i> DataTable
                    </div>
                    <div  class="card-body  col-10 m-5">
                                                
                        <h1>edit professeur</h1>




                        <% rows.forEach(function(e){ %>
                            <form class=" needs-validation" method="POST" action="/editprofesseurs/<%-e.id %>" enctype="multipart/form-data">
                                <div class="alert alert-warning col-6">
                                    <div class="mb-3  col-10">
                                        <label class="form-label">Nom</label>
                                        <input type="text" class="form-control" value="<%- e.nom %>" name="nom">
                                    </div>
                                    <div class="mb-3 col-10">
                                        <label for class="form-label">Prenom</label>
                                        <input type="text" class="form-control" value="<%- e.prenom %>" name="prenom">
                                    </div>
                                    <div class="mb-3 col-10">
                                        <label class="form-label">Photo</label>
                                        <input type="File" class="form-control" name="photo" accept="image/*" />
                                        <input type="hidden" value="<%= e.photo %>" class="form-control" name="photo1" />
                                        <img src="../upload/<%=
                                                                e.photo %>"
                                                        width="200px"
                                                        height="200px" class="m-2"/>
                                    </div>

                                    <input type="submit" name="" class="btn btn-primary" />

                                </div>

                            </form>
                            <% }); %>
                    </div>
                </div>

       
         </main>

                                </div>



















